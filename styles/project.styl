.project-main {
    display: flex;
    flex-direction: column;
    margin: 50px 0px;
    padding: 20px;

    a {
        margin: 0;
        color: #232323;
        text-decoration: none;
        transition: color 0.3s linear;
        animation: cd-bounce-2-inverse .6s;
    }
    a:hover {
        color: rgb(86,118,163);    
    }

    h3 {
        margin: 0;
        font-size: 2em;
    }
}

.header-row {
    display: flex;
    justify-content: space-between
}

.project-navigation {
    list-style: none;
    animation: cd-bounce-2-inverse .6s;
    display: flex;
    flex-wrap: wrap;

    .js {
        color: #232323
        background-color: #f7df1e;
    }
    .java {
        color: #232323
        background-color: #ed8b00      
    }
    .cs {
        color: #232323
        background-color: rgb(86,118,163);
    }
    .cpp {
        color: #232323
        background-color: #aaaaaa;
    } 
    .default {
        color: #232323
        background-color: #f16529;
    }

    .projects-header {
        color: #232323
        font-size: 1.35em;
        text-decoration: none;
        transition: color 0.3s linear;
    }
    .projects-header:hover {
        color: white;
    }

    .languages {
        display: flex;
        flex-direction: row;

        .language {
            margin: 10px 5px;
        }
    }

    .content {
        margin: 10px 5px;
        text-align: right;
    }

    li {
        border-radius: .25em;
        -moz-border-radius: .25em;
        -webkit-border-radius: .25em;
        box-shadow: 0px 2px 4px #555555;
        padding: 5px 15px;
        margin: 10px;
        width: 45%;
    }
}

